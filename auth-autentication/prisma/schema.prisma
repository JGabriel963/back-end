// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String 
  email String
  password String

  tasks Task[]

  @@map("users")
}

model Task {
  id String @id @default(uuid())
  description String
  done Boolean

  user User @relation(fields: [user_id], references: [id])

  @@map("tasks")
  user_id String
}